<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/itemImageID"
        android:layout_width="205dp"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sushipicture" />

    <TextView
        android:id="@+id/priceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:text="Pris"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toRightOf="@+id/itemImageID"
        app:layout_constraintTop_toBottomOf="@+id/nameID" />

    <Button
        android:id="@+id/orderID"
        android:layout_width="76dp"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:text="Bestil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="72dp"
        tools:layout_editor_absoluteX="300dp" />

    <TextView
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="Navn"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toRightOf="@+id/itemImageID"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:button="@drawable/custom_chackbox_selector"
        app:layout_constraintRight_toRightOf="@+id/itemImageID"
        app:layout_constraintBottom_toBottomOf="@+id/itemImageID"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>